extend layout

block content
    .inner
        h2= title
        if user
        
            form.form(action="/account" method='POST')
                label(for="name") Name
                input(type="text" name='name' value=user.name required)
                label(for="surname") Surname
                input(type="text" name='surname' value=user.surname required)
                label(for="email") Email
                input(type="email" name='email' value=user.email required)
                label(for="passportNumber") Passport Number
                input(type="number" name='passportNumber' value=user.passportNumber required)
                input(type="submit" value="Update account" name="update" class="button save")
                input(type="submit" value="Change password" name="password-change" class="button")
